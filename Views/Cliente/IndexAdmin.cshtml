@model List<Cliente>

@{
    ViewData["Title"] = "Cliente - Index Admin";
}


@if (@TempData["exclusaoSucesso"] != null)
{
    <div class="alert alert-success">@TempData["exclusaoSucesso"]</div>
}

@if (@TempData["exclusaoErro"] != null)
{
    <div class="alert alert-danger">@TempData["exclusaoErro"]</div>
}

<br />
<h3>Controle de Usu√°rios</h3>
<table class="table table-hover">

    <tr>
        <th>ID Cliente</th>
        <th>Nome</th>
        <th>Email</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.IdCliente</td>
            <td>@item.Nome</td>
            <td>@item.Email</td>
            <td>
                <a class="btn btn-sm btn-danger" href="/cliente/delete/@item.IdCliente">Apagar</a>
                <a class="btn btn-sm btn-warning" href="/cliente/update/@item.IdCliente">Editar</a>
            </td>
        </tr>
    }

</table>